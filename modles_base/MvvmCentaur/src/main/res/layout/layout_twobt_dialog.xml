<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_twobt_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="清除缓存"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimens_size_16"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_eaedf2"
        android:layout_marginTop="14.5dp" />

    <TextView
        android:id="@+id/tv_dialog_twobt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="是否确认清除缓存"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimens_size_16"
        android:gravity="left" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/bt_twobt_cancle"
            android:layout_width="91dp"
            android:layout_height="27dp"
            android:text="取消"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_bfc6d5_bt" />

        <Button
            android:id="@+id/bt_twobt_confirm"
            android:layout_width="91dp"
            android:layout_height="27dp"
            android:text="确定"
            android:textSize="12sp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_2f62c9_bt" />

    </LinearLayout>

</LinearLayout>
